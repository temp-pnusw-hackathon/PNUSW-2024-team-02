<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HomeButtonStyle">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="BlackButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="RegularTextStyle">
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="BoldTextStyle">
        <item name="android:fontFamily">@font/pretendardbold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>